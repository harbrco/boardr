<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">

		<!-- Use title if it's in the page YAML frontmatter -->
		<title><%= current_page.data.title || "Middleman" %></title>

		<!-- FONTS -->
		<script src="https://use.typekit.net/byn3uae.js"></script>
		<script>try{Typekit.load({ async: true });}catch(e){}</script>

		<%= stylesheet_link_tag "min/site-min" %>
		<%= stylesheet_link_tag "../fonts/font-awesome/css/font-awesome.min" %>

		<!-- Slick Slider Styles -->
		<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>

		<!-- modernizr for mobile menu -->
		<%= javascript_include_tag "mobile-menu-js/modernizr.custom.js" %>
	</head>

	<body>
		<div class="site-wrap">
			<!-- Mobile Menu Push Wrapper -->
			<div class="mp-pusher" id="mp-pusher">
				<%= partial "partials/mobile-menu" %>
			</div>

			<%= partial "partials/header" %>

			<%= yield %>

			<%= partial "partials/footer" %>
		</div>

		<%= javascript_include_tag "libs/jquery" %>
		<%= javascript_include_tag "min/site-min" %>

		<!-- mobile menu script dependencies -->
		<%= javascript_include_tag "mobile-menu-js/classie.js" %>
		<%= javascript_include_tag "mobile-menu-js/mlpushmenu.js" %>
		<script>
			new mlPushMenu( document.getElementById( 'mp-menu' ), document.getElementById( 'menu-toggle' ), {
				type : 'cover'
			} );
		</script>

		<!-- Slick Slider Scripts -->
		<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
	</body>
</html>
